package que1stdmarksheet;

import java.util.Arrays;

public class Student {
	private int rollNo;
	private String name;
	private int mark1;
	private int mark2;
	private int mark3;
	
	private int total;
	private float avg;
	public Student(int rollNo, String name, int mark1,int mark2, int mark3) {
		super();
		this.rollNo = rollNo;
		this.name = name;
		this.mark1=mark1;
		this.mark2=mark2;
		this.mark3=mark3;
		
		this.total = this.mark1 + this.mark2+this.mark3;
		this.avg = this.total/3;
	}
	@Override
	public String toString() {
		return "Student [rollNo=" + rollNo + ", name=" + name + ", mark1=" + mark1 + ", mark2=" + mark2 + ", mark3="
				+ mark3 + ", total=" + total + ", avg=" + avg + "]";
	}

	
	

}
